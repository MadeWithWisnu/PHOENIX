@using System.Security.Claims

<div class="header-flex">
    <h2>@ViewBag.PageTitle</h2>
    <div>
        @if(User.FindFirstValue(ClaimTypes.Role) == "Administrator")
        {
            <span id="role" style="display: none;">Administrator</span>
            <span>@User.FindFirstValue(ClaimTypes.Name) - @User.FindFirstValue("jobtitle")</span>
        }
        else
        {
            <span id="role" style="display: none;">Guest</span>
            <span>@User.FindFirstValue(ClaimTypes.Name)</span>
        }
        <button class="button-25" id="change"><a>Change Password</a></button>
        <button class="button-25" id="logout"><a asp-controller="Auth" asp-action="Logout">Log out</a></button>
    </div>
</div>
<div class="change-password">
    <div class="popup">
        <div class="header-flex">
            <h2>Change Password</h2>
        </div>
        <div id="detail-bio">
            <form method="post">
                <table>
                    <tr>
                        <td>Old Password</td>
                        <td>
                            <input type="password" id="old-password">
                            <div class="popup-validation-error" id="eror-1"></div>
                        </td>
                    </tr>
                    <tr id="tr1">
                        <td>New Password</td>
                        <td>
                            <input type="password">
                            <div class="popup-validation-error" id="eror-2"></div>
                        </td>
                    </tr>
                    <tr id="tr2">
                        <td>Confirm Password</td>
                        <td>
                            <input type="password" id="confirm-password">
                            <div class="popup-validation-error" id="eror-3"></div>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <button class="button-25" id="submit-change">Save</button>
                            <button class="button-25" id="close-change">Close</button>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>